package com.ezen.book.service;

import javax.inject.Inject;

import org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder;
import org.springframework.security.crypto.password.PasswordEncoder;
import org.springframework.stereotype.Service;

import com.ezen.book.domain.MemberVO;
import com.ezen.book.domain.UnmemberVO;
import com.ezen.book.repository.NonMemberDAO;

import lombok.extern.slf4j.Slf4j;

@Slf4j
@Service
public class NonMemberServiceImpl implements NonMemberService {

	@Inject
	private NonMemberDAO nmDAO;
	@Inject
	BCryptPasswordEncoder passwordEncoder;

	@Override
	public UnmemberVO login(UnmemberVO umvo) {
		UnmemberVO unmember = nmDAO.getId(umvo);
		if(unmember ==null) {return null;}
		
		if(passwordEncoder.matches(umvo.getMem_pw(), unmember.getMem_pw())) {
			return unmember;
		}else {
			
			return null;
	}
}
